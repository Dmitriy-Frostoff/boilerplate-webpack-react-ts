{
  "name": "boilerplate-webpack-react-ts",
  "version": "1.0.0",
  "description": "It's a boilerplate for usage of react (with hooks) with pure TS in a future project (FSD architecture prior with Webpack). Check out the docs below to be in actual tune!",
  "main": "index.tsx",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_OPTIONS='--import=tsx' TSX_TSCONFIG_PATH='./configs/ts/tsconfig.json' webpack-dev-server --config ./configs/webpack/webpack.config.ts --node-env=development --progress",
    "dev": "cross-env NODE_OPTIONS='--import=tsx' TSX_TSCONFIG_PATH='./configs/ts/tsconfig.json' webpack --config ./configs/webpack/webpack.config.ts --node-env=development --progress",
    "build": "cross-env NODE_OPTIONS='--import=tsx' TSX_TSCONFIG_PATH='./configs/ts/tsconfig.json' webpack --config ./configs/webpack/webpack.config.ts --node-env=production --progress",
    "update:packages": "node ./configs/execa/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dmitriy-Frostoff/boilerplate-webpack-react-ts"
  },
  "keywords": [
    "webpack",
    "html",
    "scss",
    "css-modules",
    "ts",
    "typescript",
    "components",
    "FSD",
    "react",
    "execa"
  ],
  "author": "Dmitriy Frostoff",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dmitriy-Frostoff/boilerplate-webpack-react-ts/issues"
  },
  "homepage": "https://github.com/Dmitriy-Frostoff/boilerplate-webpack-react-ts?tab=readme-ov-file#readme",
  "devDependencies": {
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "execa": "^9.6.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
